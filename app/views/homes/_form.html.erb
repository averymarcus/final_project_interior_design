<% was_validated = home.errors.any? %>

<%= form_with(model: home, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for owner start -->
  <div class="form-group">
    <% owner_class = "form-control" %>
    <% owner_was_invalid = home.errors.include?(:owner) %>

    <% if was_validated %>
      <% if owner_was_invalid %>
        <% owner_class << " is-invalid" %>
      <% else %>
        <% owner_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :owner %>
    <!-- Input for owner start -->
    <%= f.text_field :owner, class: owner_class, placeholder: "Enter owner" %>
    <!-- Input for owner end -->
    <% if owner_was_invalid %>
      <% home.errors.full_messages_for(:owner).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for owner end -->
  <!-- Label and input for home_name start -->
  <div class="form-group">
    <% home_name_class = "form-control" %>
    <% home_name_was_invalid = home.errors.include?(:home_name) %>

    <% if was_validated %>
      <% if home_name_was_invalid %>
        <% home_name_class << " is-invalid" %>
      <% else %>
        <% home_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :home_name %>
    <!-- Input for home_name start -->
    <%= f.text_field :home_name, class: home_name_class, placeholder: "Enter home name" %>
    <!-- Input for home_name end -->
    <% if home_name_was_invalid %>
      <% home.errors.full_messages_for(:home_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for home_name end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
